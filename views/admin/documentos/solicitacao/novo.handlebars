<div class="card card-body">
    <input id="solicitacoes_id" type="hidden" name="solicitacoes_id" value="{{solicitacao.id}}">
    <div class="tab">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Empresa</label>
                    <select id="empresas_id" class="form-control select2bs4" style="width: 100%;">
                        <option selected="selected">Selecione uma empresa</option>
                        {{#each empresas}}
                        <option value="{{id}}">{{razao}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12">
                <div class="form-group">
                    <label for="descricao">Descrição da solicitação</label>
                    <textarea id="descricao" name="descricao" class="form-control" rows="3"
                        placeholder="Descrição do documento"></textarea>
                </div>
            </div>
        </div>
        <div style="overflow:auto;">
            <div style="float:right;">
                <button type="button" id="prevBtn" class="btn btn-muted"
                    onclick="painel_solicitacoes()">Cancelar</button>
                <button type="button" id="nextBtn" class="btn btn-primary"
                    onclick="store_solicitacao('etapa_empresa')">Salvar e Continuar</button>
            </div>
        </div>
    </div>
    <div id="etapa_documentos" class="tab">
    </div>
</div>

