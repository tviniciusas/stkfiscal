<style type="text/css">
    .opaque {
        color: gray; 
        opacity: 0.6; 
        width: 100%; 
        height: 100vh;
    }
    
    .required {
        color: #dc3545;
    }

    .uploadspace {
        background: #eaf4fc;
        border: 1px dashed #0052B1;
        min-height: 224px;
        width: 100%;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
        margin-bottom: 24px;
    }

    div.uploadspace .fas.fa-file-upload {
        font-size: 30px;
        min-width: 30px;
        height: 30px;
    }

    .uploadspace span {
        font-size: 80%;
    }

    input[type="file"] {
        display: none;
    }

    div.uploadspace label {
        padding: 20px 10px;
        width: 180px;
        text-align: center;
        display: block;
        margin-top: 10px;
        margin-bottom: 0;
        cursor: pointer;
        height: 30px;
        line-height: 0px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: initial !important;
    }

    div.card-body > i.far {
        font-size: 26px;
        min-width: 26px;
        height: 26px;
    }

    .file-name {
        margin-left: 10px;
    }

    .line {
        border: 1px solid;
        color: #0052B1;
        margin-left: 40px;
    }

    .btn-submit {
        width: 100px;
    }

    .btn-submit.disabled {
        width: 130px;
    }

    .file-remove a {
        color: #212529;
        text-decoration: none;
    }

    .disabled {
        pointer-events: none;
        cursor: default;
        text-decoration: none;
    }
</style>

<div class="modal fade" id="modal-upload">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Upload de arquivos</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="adicionarDocumento" action="/modal/upload" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="solicitacaoId" value="{{solicitacaoId}}">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>
                                    MÃªs
                                    <span class="required">*</span>
                                </label>
                                <select id="mes" class="form-control select2bs4" name="mes" 
                                style="width: 100%;" required="">
                                    <option value="">Selecione...</option>
                                    {{#each meses}}
                                        <option value="{{this.id}}">
                                            {{this.nome}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>
                                    Ano
                                    <span class="required">*</span>
                                </label>
                                <select id="ano" class="form-control select2bs4" 
                                style="width: 100%;" name="ano" required="">
                                    <option value="">Selecione...</option>
                                    {{#each anos}}
                                        <option value="{{this}}">
                                            {{this}}
                                        </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="uploadspace form-group">
                                <i class="fas fa-file-upload"></i>
                                <label id="selecionar" class="btn btn-primary" for="file">Selecionar</label>
                                <input type="file" class="form-control-file" 
                                id="file" name="file" required="">
                                <span>Formatos: .doc .docx .pdf</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Documentos</h3>
                                    <span onclick="fileRemove();" title="Remover documentos"
                                    class="file-remove float-right">
                                        <a href="javascript:void(0)">X</a>
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="form-group fileUpload">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-submit float-right" 
                        disabled="">
                            Enviar
                        </button>
                    </div>
                </form>
            </div>
